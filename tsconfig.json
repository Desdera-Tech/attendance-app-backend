{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "src/swagger"]
}
